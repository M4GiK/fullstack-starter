{
  "name": "@apps/backend",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch-path=./src --watch-path=./config src/index.ts",
    "build": "tsc --build tsconfig.prod.json",
    "build:dev": "tsc --build tsconfig.json",
    "test": "NODE_ENV=test vitest --config vitest.config.js",
    "test:ci": "npm run test -- --run",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.848.0",
    "@aws-sdk/lib-storage": "3.848.0",
    "@aws-sdk/s3-request-presigner": "3.848.0",
    "@fastify/cookie": "10.0.1",
    "@fastify/cors": "11.0.1",
    "@fastify/helmet": "13.0.1",
    "@fastify/multipart": "9.0.3",
    "@fastify/type-provider-typebox": "5.2.0",
    "@sinclair/typebox": "0.34.38",
    "bcrypt": "6.0.0",
    "config": "4.0.1",
    "drizzle-orm": "0.44.3",
    "fastify": "5.4.0",
    "jsonwebtoken": "9.0.2",
    "pg": "8.16.3",
    "pino": "9.7.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "9.9.0",
    "@types/bcrypt": "5.0.2",
    "@types/config": "3.3.5",
    "@types/cookie": "0.6.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/pg": "8.15.4",
    "drizzle-kit": "0.31.4",
    "vitest": "3.2.4"
  }
}
